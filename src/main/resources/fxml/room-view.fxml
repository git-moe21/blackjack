<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.blackjack.controllers.RoomController"
      prefHeight="550.0" prefWidth="850.0"
      styleClass="root">

    <stylesheets>
        <URL value ="@../css/general.css"/>
        <URL value ="@../css/room-view.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>


    <Label fx:id="roomLabel"/>

    <HBox spacing="20.0">
        <VBox spacing="10.0">
            <Label>Spieler:</Label>
            <ListView fx:id="playerListView" maxHeight="250"></ListView>
        </VBox>
        <VBox spacing="10.0">
            <Label>Einfache Bots:</Label>
            <ListView fx:id="easyBotListView" maxHeight="250"></ListView>
            <HBox>
                <Button onAction="#removeSimpleBot">Bot entfernen</Button>
            </HBox>
        </VBox>
        <VBox spacing="10.0">
            <Label>Superbots:</Label>
            <ListView fx:id="hardBotListView" maxHeight="250"></ListView>
            <HBox>
                <Button onAction="#removeHardBot">Superbot entfernen</Button>
            </HBox>
        </VBox>
    </HBox>

    <HBox spacing="20.0">
        <VBox spacing="10.0">
            <Label text="Chat"/>
            <VBox spacing="3.0" prefWidth="450.0" prefHeight="200.0" styleClass="list-view" maxWidth="300.0">
                <ListView fx:id="chatView" maxWidth="300"/>
                <TextField fx:id="chatField" promptText="Gebe eine Nachricht ein..." maxWidth="300" onKeyPressed="#sendChatMessage"/>
            </VBox>
        </VBox>
        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#backClick">Zur√ºck</Button>
            <Button onAction="#startClick">start</Button>
        </HBox>
    </HBox>
</VBox>
