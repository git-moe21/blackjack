      fx:controller="com.example.blackjack.controllers.RegisterController"
      prefWidth="300" prefHeight="400"
      styleClass="root">

    <stylesheets>
        <URL value ="@../css/general.css"/>
        <URL value ="@../css/register-view.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
