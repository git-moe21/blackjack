<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.blackjack.controllers.RoomCreationController"
      prefWidth="300" prefHeight="400"
      styleClass="root">

    <stylesheets>
        <URL value ="@../css/general.css"/>
        <URL value ="@../css/roomCreation-view.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Region VBox.Vgrow="ALWAYS"></Region>
    <Label alignment="TOP_CENTER" text="Erstelle einen Raum"/>
    <Region VBox.Vgrow="ALWAYS"></Region>

    <TextField fx:id="roomName" promptText="Raumname:"/>

    <HBox spacing="20.0">
        <Label styleClass="botLabel">Anzahl an leichten Bots:</Label>
        <ComboBox fx:id="easyBotsCombo" onAction="#easyBotsSelected"></ComboBox>
    </HBox>

    <HBox spacing="25.0">
        <Label styleClass="botLabel">Anzahl an schweren Bots:</Label>
        <ComboBox fx:id="hardBotsCombo" onAction="#hardBotsSelected"></ComboBox>
    </HBox>

    <Region VBox.Vgrow="ALWAYS"></Region>
    <HBox>
        <Button onAction="#backClick">Zur√ºck</Button>
        <Region HBox.hgrow="ALWAYS"></Region>
        <Button onAction = "#createRoomClick">erstellen</Button>
    </HBox>
    <Region VBox.Vgrow="ALWAYS"></Region>

</VBox>
